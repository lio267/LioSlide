{
  "name": "ppt-auto-generator",
  "version": "1.0.0",
  "description": "AI-powered automatic PowerPoint generator with style rules enforcement",
  "main": "dist/pipeline.js",
  "types": "dist/pipeline.d.ts",
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc",
    "start": "next start",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate": "ts-node --project tsconfig.node.json src/pipeline.ts",
    "generate:sample": "ts-node --project tsconfig.node.json -e \"require('./src/pipeline').main()\"",
    "generate:parallel": "ts-node --project tsconfig.node.json --transpile-only -e \"require('./src/orchestrator/parallelOrchestrator').testParallelPipeline()\"",
    "generate:sequential": "ts-node --project tsconfig.node.json --transpile-only -e \"const { runParallelPipeline } = require('./src/orchestrator/parallelOrchestrator'); runParallelPipeline({ topic: 'AI 기술 트렌드', tone: 'professional', audience: '기업 임원', slideCount: 8 }, { parallel: false }).then(r => console.log(r.success ? '성공: ' + r.outputPath : '실패: ' + r.error))\"",
    "test:pipeline": "ts-node --project tsconfig.node.json --transpile-only scripts/test-parallel.ts",
    "test:mcp": "ts-node --project tsconfig.node.json --transpile-only scripts/test-mcp-integration.ts",
    "lint:rules": "ts-node scripts/validate-lint-rules.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "powerpoint",
    "pptx",
    "presentation",
    "generator",
    "ai",
    "automation",
    "slides"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@radix-ui/react-tooltip": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "fast-json-patch": "^3.1.1",
    "html2canvas": "^1.4.1",
    "immer": "^10.0.0",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.562.0",
    "next": "^16.1.3",
    "playwright": "^1.57.0",
    "pptxgenjs": "^3.12.0",
    "puppeteer": "^24.35.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
